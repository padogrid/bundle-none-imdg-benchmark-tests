		<cache-mapping>
			<cache-name>/nw/"categories"</cache-name>
			<scheme-name>remote</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>/nw/customers</cache-name>
			<scheme-name>remote</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>/nw/employees</cache-name>
			<scheme-name>remote</scheme-name>
